{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@types/*": ["types/*"]
    },
    "moduleResolution": "bundler"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
